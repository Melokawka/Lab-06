        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Student Edit" Height="450" Width="380">
    <Grid HorizontalAlignment="Center" Width="380">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="149*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Ok" Grid.Column="1" HorizontalAlignment="Left" Margin="121,327,0,0" VerticalAlignment="Top" Height="51" Width="108" RenderTransformOrigin="1.457,1.022" Click="Button_Click"/>
